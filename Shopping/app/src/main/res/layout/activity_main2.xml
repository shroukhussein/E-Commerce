<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    >

    <Button
        android:id="@+id/sweetshirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="388dp"
        android:width="133dp"
        android:fontFamily="cursive"
        android:minHeight="60dp"
        android:text="SweetShirt" />

    <Button
        android:id="@+id/jumsuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottoms"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="65dp"
        android:width="133dp"
        android:fontFamily="cursive"
        android:minHeight="60dp"
        android:text="JumpSuit" />

    <Button
        android:id="@+id/dress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sweetshirt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="65dp"
        android:width="133dp"
        android:fontFamily="cursive"
        android:minHeight="60dp"
        android:text="Dress" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="377dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="601dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Welcome To Our Store"
        android:textColor="#bf8040"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bottoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="388dp"
        android:width="133dp"
        android:fontFamily="cursive"
        android:minHeight="60dp"
        android:text="Trousers" />


</RelativeLayout>
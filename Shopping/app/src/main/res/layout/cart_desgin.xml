<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E7EDF6"
    app:cardCornerRadius="4dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:backgroundTint="@null"
        app:cardBackgroundColor="#B5CCE3">

        <TextView
            android:id="@+id/cproname"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:foregroundGravity="center"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="#FAF9F9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cproprice"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="#FAF9F9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cprototal"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="105dp"
            android:fontFamily="serif"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textColor="#FAF9F9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="240dp"
            android:background="#1976D2"
            android:text="Edit"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="240dp"
            android:background="#1976D2"
            android:text="remove"
            app:backgroundTint="@null" />

        <EditText
            android:id="@+id/editquentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint="Enter Edit Quenitity"
            android:inputType="textPersonName"
            android:textColor="#F8F6F6"
            android:textColorHint="#FAF8F8" />
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>